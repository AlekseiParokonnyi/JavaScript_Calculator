<html>
	<head>
		<title>Calculator</title>
	</head>

	<body>
		<form>
			<table>
				<tr>
					<input id="text"        type="text"   value=""                          style="width:139px; height:30px">
				</tr>

				<tr>
					<td><input id="btn7"    type="button" value="7" onclick="numb(this);"   style="width:30px; height:30px"></td>
					<td><input id="btn8"    type="button" value="8" onclick="numb(this);"   style="width:30px; height:30px"></td>
					<td><input id="btn9"    type="button" value="9" onclick="numb(this);"   style="width:30px; height:30px"></td>
					<td><input id="btnDiv"  type="button" value="/" onclick="oper(this);"   style="width:30px; height:30px"></td>
				</tr>

				<tr>
					<td><input id="btn4"    type="button" value="4" onclick="numb(this);"   style="width:30px; height:30px"></td>
					<td><input id="btn5"    type="button" value="5" onclick="numb(this);"   style="width:30px; height:30px"></td>
					<td><input id="btn6"    type="button" value="6" onclick="numb(this);"   style="width:30px; height:30px"></td>
					<td><input id="btnMult" type="button" value="*" onclick="oper(this);"   style="width:30px; height:30px"></td>
				</tr>

				<tr>
					<td><input id="btn1"    type="button" value="1" onclick="numb(this);"   style="width:30px; height:30px"></td>
					<td><input id="btn2"    type="button" value="2" onclick="numb(this);"   style="width:30px; height:30px"></td>
					<td><input id="btn3"    type="button" value="3" onclick="numb(this);"   style="width:30px; height:30px"></td>
					<td><input id="btnMin"  type="button" value="-" onclick="oper(this);"   style="width:30px; height:30px"></td>
				</tr>

				<tr>
					<td><input id="btnC"    type="button" value="C" onclick="cClear(this);" style="width:30px; height:30px"></td>
					<td><input id="btn0"    type="button" value="0" onclick="numb(this);"   style="width:30px; height:30px"></td>
					<td><input id="btnEq"   type="button" value="=" onclick="oper(this);"   style="width:30px; height:30px"></td>
					<td><input id="btnPlus" type="button" value="+" onclick="oper(this);"   style="width:30px; height:30px"></td>
				</tr>
			</table>
		</form>
	</body>

	<script type="text/javascript">
		var val1;
		var op;
		var mark = true;

		function numb(btn)
		{
			if(mark)
			{
				text.value += btn.value;
			}
			else
			{
				text.value = btn.value;
				mark = true;
			}
		}

		function oper(btn)
		{
			if(btn.value == "=")
			{
				var num1 = parseInt( val1 );
				var num2 = parseInt( text.value );
				text.value = calc(num1, num2, op);
				mark = false;
			}
			else
			{
				val1 = text.value;
				op = btn.value;
				mark = false;
			}	
		}

		function calc(num1, num2, op)
		{
			var res = 0;
			
			switch (op)
			{
				case "+": res = num1 + num2; break;
				case "-": res = num1 - num2; break;
				case "*": res = num1 * num2; break;
				case "/": res = num1 / num2; break;
			}
			return res;
		}
		
		function cClear(btn)
		{
			text.value = "";
			val1 = "";
			op = "";
			mark = true;
		}

	</script>
</html>
